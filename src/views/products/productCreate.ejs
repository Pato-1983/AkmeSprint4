<!DOCTYPE html>
<html lang="en">

<!-- Head -->
<%- include('../partials/head.ejs') %> 

<body>

    <!-- Header -->
    <%- include('../partials/header.ejs') %> 

    <main class="main-create">
        
        <h3 class="create-title">Crear Producto</h3>        
    
        <form class="create-form" action="/products/create" method="POST" enctype="multipart/form-data">

            <div class="form-div">
                <label for="name" class="form-label">Nombre del producto</label>
                <input type="text" name="name" id="name" required>
            </div>   
            
            <div class="form-div">
                <label for="description" class="form-label">Descripción</label>
                <input type="text" name="description" id="description" required>
            </div>               
        
            <div class="form-div">
                <label for="price" class="form-label">Precio</label>
                <input type="text" name="price" id="price" required>
            </div>  
            
            <div class="form-div">
                <label>Seleccionar imagen</label>
                <input type="file" name="image" accept="jpg, png">
            </div>
            
            <div class="form-div"></div>
                <label>Seleccione categoria</label>
                <select name="category" id="category">
                    <option value="Protección respiratoria">Protección respiratoria</option>
                    <option value="Detectores de gases">Detectores de gases</option>
                    <option value="EPP indumentaria">EPP indumentaria</option>
                </select>
            </div>

            <div class="form-div">
                <label for="color" class="form-label">Color</label>
                <input type="text" name="color" id="color" required>
            </div>

            <div class="form-div">
                <label for="discount" class="form-label">Descuento</label>
                <input type="number" name="discount" id="discount" required>
            </div>
            
            <div class="form-buttons">
                <button type="submit" class="submit-button">Crear Producto</button>
            </div>
    
        </form>
    
    </main>

    <!-- Footer -->
    <%- include('../partials/footer.ejs') %> 
    
</body>
</html>